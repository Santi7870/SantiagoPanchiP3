<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SantiagoPanchiP3.ViewModels"
             x:Class="SantiagoPanchiP3.Views.MovieListPage"
             Title="Santiago Panchi">

    <ContentPage.BindingContext>
        <vm:MovieListViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Label x:Name="spanchi_lblTitle" Text="Listado de PelÃ­culas" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <ListView x:Name="spanchi_listMovies" ItemsSource="{Binding Movies}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding FormattedMovie}" FontSize="16" TextColor="Black"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="spanchi_btnBack" Text="Volver" Command="{Binding GoBackCommand}" />
    </StackLayout>
</ContentPage>
