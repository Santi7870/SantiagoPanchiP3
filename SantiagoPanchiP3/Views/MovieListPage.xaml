<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SantiagoPanchiP3.ViewModels"
             x:Class="SantiagoPanchiP3.Views.MovieListPage"
             Title="Santiago Panchi">

    <ContentPage.BindingContext>
        <vm:MovieListViewModel/>
    </ContentPage.BindingContext>

    <ListView ItemsSource="{Binding Movies}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Vertical" Padding="10">
                        <Label Text="{Binding Title}" FontSize="16" TextColor="Black" />
                        <Label Text="GÃ©nero:" FontAttributes="Bold" FontSize="14"/>
                        <Label Text="{Binding Genre}" FontSize="14" TextColor="Blue"/>
                        <Label Text="Actores:" FontAttributes="Bold" FontSize="14"/>
                        <Label Text="{Binding Actor}" FontSize="14" TextColor="Green"/>
                        <Label Text="Awards:" FontAttributes="Bold" FontSize="14"/>
                        <Label Text="{Binding Awards}" FontSize="14" TextColor="Red"/>
                        <Label Text="Website:" FontAttributes="Bold" FontSize="14"/>
                        <Label Text="{Binding Website}" FontSize="14" TextColor="Purple"/>
                        <Label Text="Spanchi:" FontAttributes="Bold" FontSize="14"/>
                        <Label Text="{Binding Spanchi}" FontSize="14" TextColor="Orange"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>

